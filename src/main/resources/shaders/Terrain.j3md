MaterialDef Terrain {
    MaterialParameters {
        DiffuseMap : RepeatWrap
        NormalMap : RepeatWrap
        ParallaxMap : RepeatWrap
        DiffuseMap_scale : 1 1
        NormalMap_scale : 1 1
        ParallaxMap_scale : 1 1
        ParallaxHeight : 0.05
    }
    Technique {
        VertexShader GLSL100:shaders/Terrain.vert
        FragmentShader GLSL100:shaders/Terrain.frag
        WorldParameters {
            WorldViewProjectionMatrix
        }
    }
}
